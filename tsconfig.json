{
  "compilerOptions": {
    "allowJs": true,
    "noEmit": false,
    "sourceMap": false,
    "rootDir": "src",
    "baseUrl": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node"
  },
  "include": [
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "webpack.config.js"
  ],
  "exclude": ["node_modules", "*.js", "dist", "**/example", "*.ts"]
}
